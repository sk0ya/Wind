<UserControl x:Class="Wind.Views.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Wind.ViewModels"
        mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Startup Section -->
            <TextBlock Text="Startup" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Run at Windows Startup" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Start Wind automatically when Windows starts" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding RunAtWindowsStartup, Mode=TwoWay}"/>
                </Grid>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Close Windows on Exit" FontWeight="SemiBold" Margin="0,0,0,4"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Choose what happens to tab windows when Wind exits" FontSize="12" Margin="0,0,0,8"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <RadioButton Content="Release to desktop" GroupName="CloseWindowsOnExit" Margin="0,4"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=None}"/>
                    <RadioButton Content="Close all windows" GroupName="CloseWindowsOnExit" Margin="0,4"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=All}"/>
                    <RadioButton Content="Close startup windows only" GroupName="CloseWindowsOnExit" Margin="0,4"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=StartupOnly}"/>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,8">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Launch Applications on Start" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Applications to launch when Wind starts" FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ui:Button Icon="{ui:SymbolIcon Add24}"
                                      Command="{Binding AddStartupApplicationCommand}"
                                      ToolTip="Add Application" Margin="0,0,4,0"/>
                            <ui:Button Icon="{ui:SymbolIcon Delete24}"
                                      Command="{Binding RemoveStartupApplicationCommand}"
                                      IsEnabled="{Binding SelectedStartupApplication, Converter={StaticResource NotNullConverter}}"
                                      ToolTip="Remove Selected"/>
                        </StackPanel>
                    </Grid>
                    <ListBox ItemsSource="{Binding StartupApplications}"
                             SelectedItem="{Binding SelectedStartupApplication}"
                             MinHeight="80" MaxHeight="150"
                             Margin="0,12,0,0"
                             Background="Transparent"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4">
                                    <ui:SymbolIcon Symbol="Apps24" Margin="0,0,8,0"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Path}" FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis" MaxWidth="450"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Arguments editor for selected app -->
                    <Grid Margin="0,12,0,0"
                          Visibility="{Binding SelectedStartupApplication, Converter={StaticResource NotNullConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Arguments" VerticalAlignment="Center" Margin="0,0,12,0"
                                   FontWeight="SemiBold" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <ui:TextBox Grid.Column="1"
                                   Text="{Binding SelectedAppArguments, UpdateSourceTrigger=PropertyChanged}"
                                   PlaceholderText="e.g. --flag value"/>
                    </Grid>

                </StackPanel>
            </Border>

            <!-- Tile Sets Section -->
            <TextBlock Text="Tile Sets" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,16"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Group applications into tile layouts for side-by-side display" FontSize="12" Margin="0,0,0,12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                    <!-- Existing Tile Sets -->
                    <ItemsControl ItemsSource="{Binding TileSets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:TileSetItem}">
                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                        CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <StackPanel>
                                        <!-- Tile Set Header -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ui:SymbolIcon Symbol="Grid24" Margin="0,0,8,0"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Delete24}"
                                                      ToolTip="Remove Tile Set"
                                                      Command="{Binding DataContext.RemoveTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                        </Grid>

                                        <!-- Apps in this Tile Set -->
                                        <ListBox ItemsSource="{Binding Apps}"
                                                 SelectedItem="{Binding SelectedApp}"
                                                 MinHeight="30" MaxHeight="100"
                                                 Background="Transparent"
                                                 BorderThickness="1"
                                                 BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="2">
                                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <!-- Tile Set Controls -->
                                        <Grid Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Add app ComboBox -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ComboBox ItemsSource="{Binding DataContext.StartupApplications, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          SelectedItem="{Binding AppToAdd}"
                                                          DisplayMemberPath="Name" Margin="0,0,4,0"/>
                                                <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Add24}" ToolTip="Add to Tile Set"
                                                          Command="{Binding DataContext.AddAppToTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}" Margin="0,0,4,0"/>
                                            </Grid>

                                            <!-- Move Up -->
                                            <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon ArrowUp24}" ToolTip="Move Up"
                                                      Command="{Binding DataContext.MoveAppUpInTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}" Margin="0,0,2,0"/>
                                            <!-- Move Down -->
                                            <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon ArrowDown24}" ToolTip="Move Down"
                                                      Command="{Binding DataContext.MoveAppDownInTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}" Margin="0,0,2,0"/>
                                            <!-- Remove from Tile Set -->
                                            <ui:Button Grid.Column="3" Icon="{ui:SymbolIcon Dismiss24}" ToolTip="Remove from Tile Set"
                                                      Command="{Binding DataContext.RemoveAppFromTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- New Tile Set -->
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ui:TextBox Text="{Binding NewTileSetName, UpdateSourceTrigger=PropertyChanged}"
                                   PlaceholderText="New tile set name" Margin="0,0,8,0"/>
                        <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Add24}"
                                  Content="Create Tile Set"
                                  Command="{Binding AddTileSetCommand}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Appearance Section -->
            <TextBlock Text="Appearance" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,16"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Theme" FontWeight="SemiBold" Margin="0,0,0,8"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <RadioButton Content="Light" GroupName="Theme" Margin="0,4"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 IsChecked="{Binding SelectedTheme, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Light}"/>
                    <RadioButton Content="Dark" GroupName="Theme" Margin="0,4"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 IsChecked="{Binding SelectedTheme, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Dark}"/>
                </StackPanel>
            </Border>

            <!-- Hotkeys Section -->
            <TextBlock Text="Hotkeys" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,16"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Keyboard Shortcuts" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Next Tab" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Grid.Column="1" Text="Ctrl + Tab" FontFamily="Consolas"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Previous Tab" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Grid.Column="1" Text="Ctrl + Shift + Tab" FontFamily="Consolas"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Close Tab" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Grid.Column="1" Text="Ctrl + W" FontFamily="Consolas"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Switch to Tab 1-9" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Grid.Column="1" Text="Ctrl + 1-9" FontFamily="Consolas"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- About Section -->
            <TextBlock Text="About" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,16"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Wind - Windows Tab Manager" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Version 1.0.0" FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
