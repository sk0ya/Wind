<UserControl x:Class="Wind.Views.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Wind.ViewModels"
        mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16,12,16,16">
            <!-- Startup Section -->
            <TextBlock Text="Startup" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Run at Windows Startup" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding RunAtWindowsStartup, Mode=TwoWay}"/>
                </Grid>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Close Windows on Exit" VerticalAlignment="Center" Margin="0,0,16,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="Release" GroupName="CloseWindowsOnExit" Margin="0,0,8,0"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=None}"/>
                        <RadioButton Content="Close all" GroupName="CloseWindowsOnExit" Margin="0,0,8,0"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=All}"/>
                        <RadioButton Content="Startup only" GroupName="CloseWindowsOnExit"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=StartupOnly}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Launch Applications on Start" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ui:Button Icon="{ui:SymbolIcon Add24}"
                                      Command="{Binding AddStartupApplicationCommand}"
                                      ToolTip="Add Application" Margin="0,0,4,0"/>
                            <ui:Button Icon="{ui:SymbolIcon Delete24}"
                                      Command="{Binding RemoveStartupApplicationCommand}"
                                      IsEnabled="{Binding SelectedStartupApplication, Converter={StaticResource NotNullConverter}}"
                                      ToolTip="Remove Selected"/>
                        </StackPanel>
                    </Grid>
                    <ListBox ItemsSource="{Binding StartupApplications}"
                             SelectedItem="{Binding SelectedStartupApplication}"
                             MinHeight="40" MaxHeight="120"
                             Margin="0,6,0,0"
                             Background="Transparent"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <ui:SymbolIcon Symbol="Apps24" Margin="0,0,6,0"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Path}" FontSize="11" Margin="8,0,0,0" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis" MaxWidth="350"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Margin="0,6,0,0"
                          Visibility="{Binding SelectedStartupApplication, Converter={StaticResource NotNullConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Args" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <ui:TextBox Grid.Column="1"
                                   Text="{Binding SelectedAppArguments, UpdateSourceTrigger=PropertyChanged}"
                                   PlaceholderText="e.g. --flag value"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Quick Launch Section -->
            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <StackPanel>
                    <TextBlock Text="Quick Launch Apps" Margin="0,0,0,6"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <ui:TextBox x:Name="QuickLaunchPathBox"
                                       Text="{Binding NewQuickLaunchPath, UpdateSourceTrigger=PropertyChanged}"
                                       PlaceholderText="command or path to .exe"
                                       PreviewKeyDown="QuickLaunchPath_PreviewKeyDown"/>
                            <Popup IsOpen="{Binding IsSuggestionsOpen}"
                                   PlacementTarget="{Binding ElementName=QuickLaunchPathBox}"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   Width="{Binding ActualWidth, ElementName=QuickLaunchPathBox}"
                                   AllowsTransparency="True">
                                <Border Background="{DynamicResource ApplicationBackgroundBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1" CornerRadius="4"
                                        Padding="0" MaxHeight="200">
                                    <ListBox x:Name="SuggestionsList"
                                             ItemsSource="{Binding PathSuggestions}"
                                             SelectedItem="{Binding SelectedSuggestion}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             PreviewMouseLeftButtonUp="Suggestions_PreviewMouseLeftButtonUp">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Padding="6,2"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </Popup>
                        </Grid>
                        <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon FolderOpen24}"
                                  Command="{Binding BrowseQuickLaunchAppCommand}"
                                  ToolTip="Browse..." Margin="4,0,0,0"/>
                        <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Add24}"
                                  Command="{Binding AddQuickLaunchAppCommand}"
                                  ToolTip="Add" Margin="4,0,0,0"/>
                    </Grid>

                    <ListBox ItemsSource="{Binding QuickLaunchApps}"
                             SelectedItem="{Binding SelectedQuickLaunchApp}"
                             MinHeight="40" MaxHeight="120"
                             Background="Transparent"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <ui:SymbolIcon Symbol="WindowConsole20" Margin="0,0,6,0"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Path}" FontSize="11" Margin="8,0,0,0" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis" MaxWidth="350"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Margin="0,6,0,0"
                          Visibility="{Binding SelectedQuickLaunchApp, Converter={StaticResource NotNullConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Args" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <ui:TextBox Grid.Column="1"
                                   Text="{Binding SelectedQuickLaunchAppArguments, UpdateSourceTrigger=PropertyChanged}"
                                   PlaceholderText="e.g. --flag value"/>
                        <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Delete24}"
                                  Command="{Binding RemoveQuickLaunchAppCommand}"
                                  ToolTip="Remove Selected" Margin="4,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Tile Sets Section -->
            <TextBlock Text="Tile Sets" FontSize="14" FontWeight="SemiBold" Margin="0,12,0,6"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding TileSets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:TileSetItem}">
                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                        CornerRadius="4" Padding="8,6" Margin="0,0,0,4">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ui:SymbolIcon Symbol="Grid24" Margin="0,0,6,0"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Delete24}"
                                                      ToolTip="Remove Tile Set"
                                                      Command="{Binding DataContext.RemoveTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                        </Grid>

                                        <ListBox ItemsSource="{Binding Apps}"
                                                 SelectedItem="{Binding SelectedApp}"
                                                 MinHeight="24" MaxHeight="80"
                                                 Background="Transparent"
                                                 BorderThickness="1"
                                                 BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}" Margin="2,0"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <Grid Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ComboBox ItemsSource="{Binding DataContext.StartupApplications, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          SelectedItem="{Binding AppToAdd}"
                                                          DisplayMemberPath="Name" Margin="0,0,4,0"/>
                                                <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Add24}" ToolTip="Add to Tile Set"
                                                          Command="{Binding DataContext.AddAppToTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}" Margin="0,0,4,0"/>
                                            </Grid>

                                            <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon ArrowUp24}" ToolTip="Move Up"
                                                      Command="{Binding DataContext.MoveAppUpInTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}" Margin="0,0,2,0"/>
                                            <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon ArrowDown24}" ToolTip="Move Down"
                                                      Command="{Binding DataContext.MoveAppDownInTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}" Margin="0,0,2,0"/>
                                            <ui:Button Grid.Column="3" Icon="{ui:SymbolIcon Dismiss24}" ToolTip="Remove from Tile Set"
                                                      Command="{Binding DataContext.RemoveAppFromTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ui:TextBox Text="{Binding NewTileSetName, UpdateSourceTrigger=PropertyChanged}"
                                   PlaceholderText="New tile set name" Margin="0,0,4,0"/>
                        <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Add24}"
                                  Content="Create"
                                  Command="{Binding AddTileSetCommand}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="埋め込みアプリを閉じるとき" VerticalAlignment="Center" Margin="0,0,16,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="アプリを閉じる" GroupName="EmbedCloseAction" Margin="0,0,8,0"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding EmbedCloseAction, Converter={StaticResource StringEqualsConverter}, ConverterParameter=CloseApp}"/>
                        <RadioButton Content="埋め込み解除" GroupName="EmbedCloseAction" Margin="0,0,8,0"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding EmbedCloseAction, Converter={StaticResource StringEqualsConverter}, ConverterParameter=ReleaseEmbed}"/>
                        <RadioButton Content="Windを閉じる" GroupName="EmbedCloseAction"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding EmbedCloseAction, Converter={StaticResource StringEqualsConverter}, ConverterParameter=CloseWind}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Appearance Section -->
            <TextBlock Text="Appearance" FontSize="14" FontWeight="SemiBold" Margin="0,12,0,6"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Theme" VerticalAlignment="Center" Margin="0,0,16,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="Light" GroupName="Theme" Margin="0,0,12,0"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Light}"/>
                        <RadioButton Content="Dark" GroupName="Theme"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Dark}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tab Position" VerticalAlignment="Center" Margin="0,0,16,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="Top" GroupName="TabPosition" Margin="0,0,8,0"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding TabHeaderPosition, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Top}"/>
                        <RadioButton Content="Bottom" GroupName="TabPosition" Margin="0,0,8,0"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding TabHeaderPosition, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Bottom}"/>
                        <RadioButton Content="Left" GroupName="TabPosition" Margin="0,0,8,0"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding TabHeaderPosition, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Left}"/>
                        <RadioButton Content="Right" GroupName="TabPosition"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding TabHeaderPosition, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Right}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Hotkeys Section -->
            <TextBlock Text="Hotkeys" FontSize="14" FontWeight="SemiBold" Margin="0,12,0,6"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,6" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Next Tab" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Ctrl+Tab" FontFamily="Consolas" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="0,0,8,0">
                        <TextBlock Text="Previous Tab" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Ctrl+Shift+Tab" FontFamily="Consolas" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="0,0,8,0">
                        <TextBlock Text="Close Tab" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Ctrl+W" FontFamily="Consolas" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Switch Tab 1-9" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Ctrl+1-9" FontFamily="Consolas" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- About -->
            <TextBlock Margin="0,12,0,0" FontSize="11" HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                <Run Text="Wind — Windows Tab Manager v1.0.0"/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
