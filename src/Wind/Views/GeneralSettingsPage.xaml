<UserControl x:Class="Wind.Views.GeneralSettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Wind.ViewModels"
        xmlns:converters="clr-namespace:Wind.Converters">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16,12,16,16">
            <!-- Startup Section -->
            <TextBlock Text="Startup" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Run at Windows Startup" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding RunAtWindowsStartup, Mode=TwoWay}"/>
                </Grid>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Close Windows on Exit" VerticalAlignment="Center" Margin="0,0,16,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="Release" GroupName="CloseWindowsOnExit" Margin="0,0,8,0"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=None}"/>
                        <RadioButton Content="Close all" GroupName="CloseWindowsOnExit" Margin="0,0,8,0"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=All}"/>
                        <RadioButton Content="Startup only" GroupName="CloseWindowsOnExit"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding CloseWindowsOnExit, Converter={StaticResource StringEqualsConverter}, ConverterParameter=StartupOnly}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="埋め込みアプリを閉じるとき" VerticalAlignment="Center" Margin="0,0,16,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="アプリを閉じる" GroupName="EmbedCloseAction" Margin="0,0,8,0"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding EmbedCloseAction, Converter={StaticResource StringEqualsConverter}, ConverterParameter=CloseApp}"/>
                        <RadioButton Content="埋め込み解除" GroupName="EmbedCloseAction" Margin="0,0,8,0"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding EmbedCloseAction, Converter={StaticResource StringEqualsConverter}, ConverterParameter=ReleaseEmbed}"/>
                        <RadioButton Content="Windを閉じる" GroupName="EmbedCloseAction"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding EmbedCloseAction, Converter={StaticResource StringEqualsConverter}, ConverterParameter=CloseWind}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Appearance Section -->
            <TextBlock Text="Appearance" FontSize="14" FontWeight="SemiBold" Margin="0,12,0,6"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Theme" VerticalAlignment="Center" Margin="0,0,16,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="Light" GroupName="Theme" Margin="0,0,12,0"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Light}"/>
                        <RadioButton Content="Dark" GroupName="Theme"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Dark}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tab Position" VerticalAlignment="Center" Margin="0,0,16,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="Top" GroupName="TabPosition" Margin="0,0,8,0"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding TabHeaderPosition, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Top}"/>
                        <RadioButton Content="Bottom" GroupName="TabPosition" Margin="0,0,8,0"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding TabHeaderPosition, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Bottom}"/>
                        <RadioButton Content="Left" GroupName="TabPosition" Margin="0,0,8,0"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding TabHeaderPosition, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Left}"/>
                        <RadioButton Content="Right" GroupName="TabPosition"
                                     Style="{StaticResource AccentRadioButtonStyle}"
                                     IsChecked="{Binding TabHeaderPosition, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Right}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Accent Color Section -->
            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,10" Margin="0,0,0,4">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Use System Accent" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding UseSystemAccent, Mode=TwoWay}"/>
                    </Grid>

                    <StackPanel Visibility="{Binding UseSystemAccent, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                        <TextBlock Text="Accent Color" Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                        <!-- Preset Colors -->
                        <ItemsControl ItemsSource="{Binding PresetColors}" Margin="0,0,0,8">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="28" Height="28" Margin="0,0,6,6" Padding="0"
                                            ToolTip="{Binding Name}"
                                            Click="PresetColorButton_Click"
                                            Tag="{Binding ColorCode}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Ellipse Width="24" Height="24"
                                                             Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                                             Stroke="{DynamicResource ControlStrongStrokeColorDefaultBrush}"
                                                             StrokeThickness="1"/>
                                                    <Ellipse x:Name="SelectionIndicator" Width="28" Height="28"
                                                             Stroke="{DynamicResource SystemAccentColorSecondaryBrush}"
                                                             StrokeThickness="2" Visibility="Collapsed"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Value="True">
                                                        <DataTrigger.Binding>
                                                            <MultiBinding Converter="{StaticResource StringEqualsConverter}">
                                                                <Binding Path="ColorCode"/>
                                                                <Binding Path="DataContext.SelectedAccentColor" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                            </MultiBinding>
                                                        </DataTrigger.Binding>
                                                        <Setter TargetName="SelectionIndicator" Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="SelectionIndicator" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="SelectionIndicator" Property="Opacity" Value="0.5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Custom Color Input -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Custom:" VerticalAlignment="Center" Margin="0,0,8,0"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <ui:TextBox Width="100" Text="{Binding SelectedAccentColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="#RRGGBB"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Background Color Section -->
            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,10" Margin="0,0,0,4">
                <StackPanel>
                    <TextBlock Text="Background Color" Margin="0,0,0,8"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                    <!-- Background Preset Colors -->
                    <ItemsControl ItemsSource="{Binding BackgroundPresetColors}" Margin="0,0,0,8">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Width="28" Height="28" Margin="0,0,6,6" Padding="0"
                                        ToolTip="{Binding Name}"
                                        Click="BackgroundPresetColorButton_Click"
                                        Tag="{Binding ColorCode}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Border Width="24" Height="24" CornerRadius="4"
                                                        BorderBrush="{DynamicResource ControlStrongStrokeColorDefaultBrush}"
                                                        BorderThickness="1">
                                                    <Border.Background>
                                                        <MultiBinding Converter="{StaticResource BackgroundColorPreviewConverter}">
                                                            <Binding Path="ColorCode"/>
                                                            <Binding Path="Name"/>
                                                        </MultiBinding>
                                                    </Border.Background>
                                                </Border>
                                                <Border x:Name="SelectionIndicator" Width="28" Height="28" CornerRadius="6"
                                                        BorderBrush="{DynamicResource SystemAccentColorSecondaryBrush}"
                                                        BorderThickness="2" Visibility="Collapsed"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <MultiBinding Converter="{StaticResource StringEqualsConverter}">
                                                            <Binding Path="ColorCode"/>
                                                            <Binding Path="DataContext.SelectedBackgroundColor" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        </MultiBinding>
                                                    </DataTrigger.Binding>
                                                    <Setter TargetName="SelectionIndicator" Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="SelectionIndicator" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="SelectionIndicator" Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Custom Background Color Input -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Custom:" VerticalAlignment="Center" Margin="0,0,8,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <ui:TextBox Width="100" Text="{Binding SelectedBackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="#RRGGBB"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- About -->
            <TextBlock Margin="0,12,0,0" FontSize="11" HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                <Run Text="Wind — Windows Tab Manager v1.0.0"/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
