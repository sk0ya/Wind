<ui:FluentWindow x:Class="Wind.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Settings - Wind"
        Height="600" Width="650"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="Settings"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Startup Section -->
                <TextBlock Text="Startup" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Run at Windows Startup" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Start Wind automatically when Windows starts" FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding RunAtWindowsStartup, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Launch Applications on Start" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="Applications to launch when Wind starts" FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ui:Button Icon="{ui:SymbolIcon Add24}"
                                          Command="{Binding AddStartupApplicationCommand}"
                                          ToolTip="Add Application" Margin="0,0,4,0"/>
                                <ui:Button Icon="{ui:SymbolIcon Delete24}"
                                          Command="{Binding RemoveStartupApplicationCommand}"
                                          IsEnabled="{Binding SelectedStartupApplication, Converter={StaticResource NotNullConverter}}"
                                          ToolTip="Remove Selected"/>
                            </StackPanel>
                        </Grid>
                        <ListBox ItemsSource="{Binding StartupApplications}"
                                 SelectedItem="{Binding SelectedStartupApplication}"
                                 MinHeight="80" MaxHeight="150"
                                 Margin="0,12,0,0"
                                 Background="Transparent"
                                 BorderThickness="1"
                                 BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="4">
                                        <ui:SymbolIcon Symbol="Apps24" Margin="0,0,8,0"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Path}" FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis" MaxWidth="450"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Appearance Section -->
                <TextBlock Text="Appearance" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,16"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Theme" FontWeight="SemiBold" Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <RadioButton Content="Light" GroupName="Theme" Margin="0,4"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Light}"/>
                        <RadioButton Content="Dark" GroupName="Theme" Margin="0,4"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Dark}"/>
                    </StackPanel>
                </Border>

                <!-- Behavior Section -->
                <TextBlock Text="Behavior" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,16"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Auto-save Session" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Automatically save session on exit" FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding AutoSaveSession, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Restore Session on Startup" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Restore last session when Wind starts" FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding RestoreSessionOnStartup, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <!-- Hotkeys Section -->
                <TextBlock Text="Hotkeys" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,16"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Keyboard Shortcuts" FontWeight="SemiBold" Margin="0,0,0,12"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Next Tab" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Grid.Column="1" Text="Ctrl + Tab" FontFamily="Consolas"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Previous Tab" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Grid.Column="1" Text="Ctrl + Shift + Tab" FontFamily="Consolas"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Close Tab" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Grid.Column="1" Text="Ctrl + W" FontFamily="Consolas"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Switch to Tab 1-9" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Grid.Column="1" Text="Ctrl + 1-9" FontFamily="Consolas"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <TextBlock Text="About" FontSize="20" FontWeight="SemiBold" Margin="0,24,0,16"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Wind - Windows Tab Manager" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Version 1.0.0" FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
